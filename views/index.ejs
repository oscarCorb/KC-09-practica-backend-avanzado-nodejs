<%- include('header') -%>

<table>
    <th >
        <tr class="table-header">
            <td><%= __('name') %></td>
            <td><%= __('price') %></td>
            <td><%= __('new') %></td>
            <td><%= __('tags') %></td>
            <td><%= __('image url') %></td>
            <td><%= __('description') %></td>
            <td><%= __('link') %></td>
        </tr>
    </th>

    <% for (let i = 0; i < products.length; i++) { %>
        <% const product = products[i] %>
            <tr class=<%- i % 2 === 0 ? "even-row" : "odd-row" %>>
                <td> <%= product.name %> </td>
                <td class="price-column"> <%= product.price.toFixed(2).replace(/[.]/, ',') %> â‚¬</td>
                <td class= <%- product.new === true ? "new-true" : "new-false" %> > <%= product.new %> </td>
                <td> <%= product.tags %> </td>
                <td>images/products/<%= product.image %> </td>
                <td> <%= product.description %> </td>
                <td><a href="/products/<%= product.name %>"><%= __('Go') %></a></td>
            </tr>
    <% } %>

</table>

<%- include('footer') -%>